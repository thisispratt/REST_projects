<%- include("partials/header.ejs") %>
<div class="container">
    <h1>Edit: <%= cat.title %></h1>
    <form action="/cats/<%= cat._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" class="form-control" id="title" name="titlevalue" value="<%= cat.title %>">
        </div>
        <div class="form-group">
            <label for="form-img">Image-URL</label>
            <input type="text" class="form-control" id="form-img" name="imagevalue" value="<%= cat.image %>">
        </div>
        <div class="form-group">
            <label for="info">Info about this Cat</label>
            <textarea class="form-control" id="info" rows="3" name="infovalue"><%= cat.info %></textarea>
        </div>
        <button class="btn btn-info btn-lg" type="submit">SUBMIT</button>
    </form> 
</div>
<%- include("partials/footer.ejs") %>
