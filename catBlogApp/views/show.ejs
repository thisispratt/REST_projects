<%- include("partials/header.ejs") %>
    <div class="container">
        <h1><%= cat.title %></h1>
        <figure>
            <img src="<%= cat.image %>" alt="cat-image">
            <figcaption><%= cat.info %></figcaption>
        </figure>
        <a class="btn btn-info" href="/cats/<%=cat._id%>/edit">EDIT</a>
        <form action="/cats/<%= cat._id %>?_method=DELETE" method="POST">
            <button class="btn btn-info" type="submit">DELETE</button>
        </form>
    </div>
