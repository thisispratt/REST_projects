<%- include("partials/header.ejs") %>
        <div class="container">
            <h1>EDIT:: <%= foodItem.name %></h1>

            <form action="/foods/<%= foodItem._id %>?_method=PUT" method="POST">
                <div class="form-group">
                  <label for="Name">Name</label>
                  <input type="text" class="form-control" id="name" name="namevalue" value="<%= foodItem.name %>">
                </div>
                <div class="form-group">
                    <label for="form-img">Image-URL</label>
                    <input type="text" class="form-control" id="form-img" name="imagevalue" value="<%= foodItem.image %>">
                </div>
                <div class="form-group">
                    <label for="foodInfo">Description about the food</label>
                    <textarea class="form-control" id="foodInfo" rows="3" name="infovalue"><%= foodItem.info%></textarea>
                </div>
                <button class="btn btn-info btn-lg" type="submit">SUBMIT</button>
            </form> 
        </div>

    <%- include("partials/footer.ejs") %>