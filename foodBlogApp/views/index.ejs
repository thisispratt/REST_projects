<%- include("partials/header.ejs") %>
   <div class="container">
        <h1>FOOD-ITEMS</h1>
            <div class="row">
        <% foodItems.forEach(function(food){ %>
            <div class="col-sm">
                <h2><%= food.name %></h2>
                <figure>
                <img src="<%= food.image %>" alt="food-image">
                <figcaption><%= food.info.substring(0,20)+ "..." %></figcaption>
                </figure>
                <a href="/foods/<%= food._id %>"+ </a>SHOW MORE</a>
            </div>
        <% }); %>
            </div>
    </div>
