<%- include("partials/header.ejs") %>
    <div class="container"> 
        
            <h1>DOGS PAGE</h1>

              <%  blogs.forEach(function(blog){ %>
                    <div class="img-thumbnail small-divs">
                        <h3><%= blog.title %> -- created: <span><%= blog.created.toDateString() %> </span></h3>
                        <figure>
                            <img class="index-image" src="<%= blog.image %>" alt="Blogpost-image">
                            <figcaption><%= blog.body.substring(0,40) %>...</figcaption>
                        </figure>
                        <a class="btn btn-info" href="/blogs/<%= blog._id %>">More Info</a>
                    </div>
               <% }); %>

    </div>

<%- include("partials/footer.ejs") %>